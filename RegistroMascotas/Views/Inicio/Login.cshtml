@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center">Iniciar Sesión</h1>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white text-center"><strong>Acceso al Sistema</strong></h3>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div class="form-group mb-3">
                        <label for="username" class="form-label">Usuario</label>
                        <input type="text" name="username" id="username" class="form-control" placeholder="Ingrese su usuario" required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="password" class="form-label">Contraseña</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Ingrese su contraseña" required />
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="fa fa-sign-in" aria-hidden="true"></i> Ingresar
                        </button>
                        <a asp-action="Index" asp-controller="Inicio" class="btn btn-secondary btn-lg">
                            <i class="fa fa-home" aria-hidden="true"></i> Cancelar
                        </a>
                    </div>
                </form>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3 text-center">
                        @ViewBag.Error
                    </div>
                }
            </div>
        </div>
    </div>
</div>

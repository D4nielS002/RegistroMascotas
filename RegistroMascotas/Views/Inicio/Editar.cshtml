@model RegistroMascotas.Models.Contacto
@{
    ViewData["Title"] = "Editar Contacto";
}

<h1 class="text-center">Editar Contacto</h1>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Modificar Información del Contacto</strong></h3>
            </div>
            <div class="card-body">
                <form asp-action="Editar" asp-controller="Inicio" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Raza" class="form-label"></label>
                        <input asp-for="Raza" class="form-control" placeholder="Ingrese la raza" />
                        <span asp-validation-for="Raza" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Peso" class="form-label"></label>
                        <input asp-for="Peso" class="form-control" placeholder="Ingrese el peso en kg" />
                        <span asp-validation-for="Peso" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="fa fa-pencil" aria-hidden="true"></i> Guardar Cambios
                        </button>
                        <a asp-action="Index" asp-controller="Inicio" class="btn btn-secondary btn-lg">
                            <i class="fa fa-times" aria-hidden="true"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
